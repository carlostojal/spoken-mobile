{
  "expo": {
    "name": "Spoken",
    "slug": "spoken-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/spoken-logo.png",
    "splash": {
      "image": "./assets/spoken-logo-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D2D2D"
    },
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "expo.ts",
        "expo.tsx",
        "expo.js",
        "expo.jsx",
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "wasm",
        "svg"
      ]
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 10000
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/spoken-logo.png"
    },
    "web": {
      "favicon": "./assets/spoken-logo.png"
    },
    "android": {
      "package": "com.carlostojal.spoken",
      "googleServicesFile": "./google-services.json",
      "useNextNotificationsApi": true,
      "icon": "./assets/spoken-logo.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/spoken-logo-foreground.png",
        "backgroundColor": "#2D2D2D"
      }
    },
    "extra": {
      "APOLLO_ADDRESS": "http://46.189.218.6",
      "APOLLO_PORT": "4000",
      "EXPRESS_ADDRESS": "http://46.189.218.6",
      "EXPRESS_PORT": "8080",
      "MEDIA_ENDPOINT": "media",
      "UPLOAD_ENDPOINT": "upload",
      "POSTS_PER_PAGE": 10
    },
    "description": ""
  }
}
