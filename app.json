{
  "expo": {
    "name": "Spoken",
    "slug": "spoken-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/spoken-logo.png",
    "splash": {
      "image": "./assets/spoken-logo-splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2D2D2D"
    },
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "expo.ts",
        "expo.tsx",
        "expo.js",
        "expo.jsx",
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "wasm",
        "svg"
      ]
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD",
      "fallbackToCacheTimeout": 10000
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "web": {
      "favicon": "./assets/spoken-logo.png"
    },
    "android": {
      "package": "com.carlostojal.spoken"
    },
    "extra": {
      "API_USING_DOMAIN": true,
      "API_ADDRESS": "https://us-central1-spoken-313610.cloudfunctions.net/spoken-api",
      "API_PORT": "4000",
      "API_ENDPOINT": "/graphql",
      "MEDIA_SERVER_USING_DOMAIN": true,
      "MEDIA_SERVER_ADDRESS": "https://us-central1-spoken-313610.cloudfunctions.net/spoken-media-server",
      "MEDIA_SERVER_PORT": "8080",
      "MEDIA_ENDPOINT": "media",
      "UPLOAD_ENDPOINT": "/upload",
      "POSTS_PER_PAGE": 10,
      "IMAGE_COMPRESSION_LEVEL": 0.7,
      "POST_PROMOTION_ENABLED": false
    },
    "description": ""
  }
}
